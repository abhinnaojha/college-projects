@{
    ViewBag.Title = "Brands";
}
@model IEnumerable<automobile_database_system.Models.Brand>;

<div>
    <div class="flex flex-direction-vertical">
        <a asp-controller = "Brand" asp-action = "Create" class="flex-centre-horizontal">
            <button >
                Add a new brand
            </button>
        </a>
        
        <div class="flex-centre-horizontal">
            <table>
                <tr>
                    <th>Brands</th>
                </tr>
                @foreach(var b in Model)
                {
                    <tr>
                        <td>@b.BrandName</td>
                        <td>
                            <a asp-controller="Brand" asp-action="Edit" asp-route-id="@b.Id">
                                <button>Edit</button>
                            </a>
                        </td>
                    </tr>
                }

            </table>
        </div>
</div>