@{
    ViewBag.Title = "Automobile";
}
@model IEnumerable<automobile_database_system.Models.Auto>;

<div>
    <div class="flex flex-direction-vertical">
        @if(TempData["msg"] is not null)
        {
            <div class="flex-centre-horizontal">
                @TempData["msg"]
            </div> 
        }
        @if(TempData["error"] is not null)
        {
            <div class="flex-centre-horizontal">
                @TempData["error"]
            </div> 
        }
        <div class="flex-centre-horizontal">
            <a asp-controller = "Auto" asp-action = "Create" class="flex-centre-horizontal">
                <button>Add Automobile</button>
            </a>
        </div>
    </div>
    <div class="flex">
        <!--motorcycle table-->
        <div class="flex-centre-horizontal">
            <table border="1">
                <tr>
                    <th>Brand</th>
                    <th>Model</th>
                    <th>Year</th>
                    <th>Price</th>
                </tr>
                @foreach(var a in Model)
                {
                    @if(a.VehicleType == 2)
                    {
                        <tr>
                            <td>@a.Brand</td>
                            <td>
                                <a asp-controller="Auto" asp-action="Details" asp-route-id="@a.Id">
                                    @a.ModelName
                                </a>
                            </td>
                            <td>@a.BuildYear</td>
                            <td>@a.Price</td>
                        </tr>
                    }
                    
                }
            </table>
        </div>
        <!--car table-->
        <div class="flex-centre-horizontal">
            <table border="1">
                <tr>
                    <th>Brand</th>
                    <th>Model</th>
                    <th>Year</th>
                    <th>Price</th>
                </tr>
                @foreach(var a in Model)
                {
                    @if(a.VehicleType == 4)
                    {
                        <tr>
                            <td>@a.Brand</td>
                            <td>
                                <a asp-controller="Auto" asp-action="Details" asp-route-id="@a.Id">
                                    @a.ModelName
                                </a>
                            </td>
                            <td>@a.BuildYear</td>
                            <td>@a.Price</td>
                        </tr>
                    }
                    
                }
            </table>
        </div>
    </div>
</div>